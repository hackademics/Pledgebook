# =============================================================================
# PLEDGEBOOK SMART CONTRACTS ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files with real secrets to version control
# =============================================================================

# =============================================================================
# DEPLOYER CREDENTIALS (Use ONE method - prefer hardware wallet in production)
# =============================================================================

# Option 1: Private key (NEVER use for mainnet with significant funds)
DEPLOYER_PRIVATE_KEY=

# Option 2: Keystore file (more secure - password protected)
DEPLOYER_KEYSTORE_PATH=
DEPLOYER_KEYSTORE_PASSWORD=

# Option 3: Mnemonic (12/24 word seed phrase)
DEPLOYER_MNEMONIC=
DEPLOYER_MNEMONIC_PATH=m/44'/60'/0'/0

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# RPC URLs (use authenticated/private RPC endpoints in production)
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Fork testing - specific block for reproducible tests
POLYGON_FORK_BLOCK=

# Etherscan/Polygonscan API key for contract verification
ETHERSCAN_API_KEY=

# =============================================================================
# DEPLOYMENT SAFETY
# =============================================================================

# Expected chain ID (prevents deploying to wrong network)
# Polygon Mainnet: 137, Amoy Testnet: 80002
EXPECTED_CHAIN_ID=80002

# Set to true to simulate deployment without executing
DRY_RUN=true

# =============================================================================
# CONTRACT ADDRESSES (Polygon Mainnet)
# =============================================================================

# USDC.e (bridged USDC on Polygon)
USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Aave V3 Pool on Polygon
AAVE_POOL_ADDRESS=0x794a61358D6845594F94dc1DB02A252b5b4814aD

# CRE Oracle address (set after CRE workflow deployment)
CRE_ORACLE_ADDRESS=

# Treasury address (multisig recommended for production)
TREASURY_ADDRESS=

