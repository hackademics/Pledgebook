{
  "name": "@pledgebook/contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "compile": "hardhat compile",
    "clean": "rimraf artifacts cache typechain-types coverage coverage.json",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "deploy:mocks:local": "hardhat run scripts/deployMocks.ts --network localhost",
    "deploy:local": "hardhat run scripts/deployLocal.ts --network localhost",
    "deploy:factory:local": "hardhat run scripts/deployFactory.ts --network localhost",
    "deploy:factory:amoy": "hardhat run scripts/deployFactory.ts --network polygonAmoy",
    "deploy:polygon": "hardhat run scripts/deployFactory.ts --network polygon",
    "preflight:local": "hardhat run scripts/preflight.ts --network localhost",
    "preflight:amoy": "hardhat run scripts/preflight.ts --network polygonAmoy",
    "preflight:polygon": "hardhat run scripts/preflight.ts --network polygon",
    "analyze:slither": "slither . --config-file slither.config.json",
    "analyze:mythril": "myth analyze contracts/*.sol --solc-json mythril.config.json"
  },
  "devDependencies": {
    "@aave/core-v3": "^1.19.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/chai": "^4.3.10",
    "@types/node": "^22.15.21",
    "@typescript-eslint/parser": "^8.32.0",
    "chai": "^4.3.10",
    "dotenv": "^16.4.5",
    "eslint": "^9.11.1",
    "hardhat": "^2.22.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.3",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
