# =============================================================================
# PLEDGEBOOK ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files with real secrets to version control
# =============================================================================

# =============================================================================
# AUTHENTICATION & SECURITY (Required for production)
# =============================================================================

# JWT signing secret for SIWE sessions (min 32 chars, use cryptographically random)
# Generate with: openssl rand -hex 32
NUXT_API_SECRET=your-api-secret-here-min-32-chars

# Cloudflare Turnstile (anti-bot protection)
# Get from: https://dash.cloudflare.com/turnstile
NUXT_TURNSTILE_SECRET=
NUXT_PUBLIC_TURNSTILE_SITE_KEY=

# Admin wallet allowlist (comma-separated, lowercase Ethereum addresses)
# Example: 0x1234...abcd,0x5678...efgh
NUXT_ADMIN_WALLET_ALLOWLIST=
NUXT_PUBLIC_ADMIN_WALLET_ALLOWLIST=

# CRE (Chainlink Runtime Environment) webhook secret for signature verification
# Generate with: openssl rand -hex 32
NUXT_CRE_WEBHOOK_SECRET=

# =============================================================================
# IPFS / PINATA CONFIGURATION
# =============================================================================

# Pinata JWT for IPFS pinning (get from Pinata dashboard)
NUXT_IPFS_PINATA_JWT=
NUXT_IPFS_PINATA_SECRET_JWT=

# Public IPFS gateway URL
NUXT_PUBLIC_IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# RPC URLs (use private/authenticated RPC endpoints in production)
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Smart contract addresses (fill after deployment)
NUXT_PUBLIC_FACTORY_ADDRESS=
NUXT_PUBLIC_USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# =============================================================================
# API CONFIGURATION
# =============================================================================

NUXT_PUBLIC_API_BASE=/api
NUXT_PUBLIC_APP_NAME=Pledgebook
NUXT_APP_URL=http://localhost:8788
NUXT_PUBLIC_APP_URL=http://localhost:8788

# =============================================================================
# AI PROVIDER API KEYS (Required for consensus verification)
# =============================================================================

# Anthropic (Claude) - https://console.anthropic.com/
NUXT_ANTHROPIC_API_KEY=

# OpenAI (GPT-4) - https://platform.openai.com/api-keys
NUXT_OPENAI_API_KEY=

# Google AI (Gemini) - https://aistudio.google.com/apikey
NUXT_GOOGLE_AI_API_KEY=

# =============================================================================
# DEVELOPMENT ONLY (Remove in production)
# =============================================================================

# Set to 'development' for local, 'staging' or 'production' for deployed
NODE_ENV=development
